@model GameFormModel

@{
    ViewData["Title"] = "Add Game";
}

<div class="container">
    <h1 class="mt-4">Add Game</h1>

    <form method="post" asp-controller="Game" asp-action="Add">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="GTA 1,2,3..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" type="text" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="YearPublished"></label>
                    <input asp-for="YearPublished" type="date" class="form-control" placeholder="01/05/2004" />
                    <span asp-validation-for="YearPublished" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-buttons mt-3">
            <input type="submit" value="Add" class="btn btn-outline-success" />
            <a asp-controller="Game" asp-action="Index" class="btn btn-outline-danger">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
