@model GameFormModel

@{
    ViewData["Title"] = "Edit Game";
}

<div class="container">
    <h1 class="mt-4">Edit Game</h1>
    
    <form method="post" asp-controller="Game" asp-action="Edit">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" value="@Model.Name" class="form-control" placeholder="GTA 1,2,3..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" value="@Model.Description" class="form-control" ></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" type="text" value="@Model.ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="YearPublished"></label>
                    <input asp-for="YearPublished" type="date" class="form-control" />
                    <span asp-validation-for="YearPublished" class="text-danger"></span>
                </div>
            </div>
        </div>
        <input type="submit" value="Edit" class="btn btn-outline-success" style="min-width: 140px" />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
