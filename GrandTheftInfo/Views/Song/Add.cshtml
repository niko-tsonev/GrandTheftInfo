@model SongFormModel

@{
    ViewData["Title"] = "Add Song";
}

<div class="container">
    <h1 class="mt-4">Add Song</h1>

    <form method="post" asp-controller="Song" asp-action="Add">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Song" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VideoUrl"></label>
                    <input asp-for="VideoUrl" type="text" class="form-control" />
                    <span asp-validation-for="VideoUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Radio"></label>
                    <input asp-for="Radio" value="@Model.Radio" type="text" class="form-control" hidden/>
                    <input value="@Model.Radio" type="text" class="form-control" disabled />
                    <span asp-validation-for="Radio" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="RadioImageUrl"></label>
                    <input asp-for="RadioImageUrl" value="@Model.RadioImageUrl" type="text" class="form-control" />
                    <span asp-validation-for="RadioImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GameId"></label>
                    <select asp-for="GameId" class="form-control">
                        @foreach (var game in Model.Games)
                        {
                            <option value="@game.Id">@game.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <input type="submit" value="Add" class="btn btn-outline-success" style="min-width: 140px" />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}