@model IOrderedEnumerable<IGrouping<int,MissionViewModel>>

@{
    ViewData["Title"] = "Missions";
}

<div class="container">
    @await Html.PartialAsync("_GameNavigationPartial", Model)

    <div class="row">
        @{
            foreach (var gameGroup in Model)
            {
                foreach (var mission in gameGroup)
                {
                    <div class="col-sm-3 game-mission" data-game-id="@gameGroup.Key">
                        <div class="card mb-3">
                            <h5 class="card-header">@mission.Name</h5>
                            <iframe class="iframe"
                                    src="https://www.youtube.com/embed/tgbNymZ7vqY">
                            </iframe>
                            <div class="card-body">
                                <p class="card-text">@mission.Description</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">@mission.GameName</li>
                            </ul>
                            <div class="card-body">
                                <div class="card-info">
                                    <a asp-controller="Mission" asp-action="Edit" asp-route-id="@mission.Id" class="btn btn-outline-warning">Edit</a>
                                    <form method="post" asp-controller="Mission" asp-action="Delete" asp-route-id="@mission.Id">
                                        <input type="submit" value="Delete" class="btn btn-outline-danger">
                                    </form>
                                </div>
                            </div>
                            <div class="card-footer text-muted">2 days ago</div>
                        </div>
                    </div>
                }
            }
        }
    </div>

    <div class="card-button-new">
        <a asp-controller="Mission" asp-action="Add" class="btn btn-outline-success">Add New Mission</a>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var radioButtons = document.querySelectorAll('.btn-check');

        // Show all missions for the first game when the page is loaded
        var firstGameId = '@Model.First().Key';
        var firstGameMissions = document.querySelectorAll('.game-mission[data-game-id="' + firstGameId + '"]');
        firstGameMissions.forEach(function (mission) {
            mission.style.display = 'block';
        });

        radioButtons.forEach(function (radio) {
            radio.addEventListener('change', function () {
                var gameId = this.getAttribute('data-game-id');
                var missions = document.querySelectorAll('.game-mission');

                // Hide all missions
                missions.forEach(function (mission) {
                    mission.style.display = 'none';
                });

                // Show missions for the selected game
                var selectedMissions = document.querySelectorAll('.game-mission[data-game-id="' + gameId + '"]');
                selectedMissions.forEach(function (mission) {
                    mission.style.display = 'block';
                });
            });
        });
    });
</script>

<style>
    .iframe {
        width: 100%;
        height: 200px;
    }

    .card-info {
        text-align: center;
    }

    .card-info a, .card-info form {
        display: inline-block;
    }

    .card-info a, .card-info input {
        padding: 10px;
        font-weight: bold;
    }

    .game-nav-container {
        padding-bottom: 20px;
        text-align: center;
    }

    .game-mission {
        display: none;
    }

    .card-button-new {
        text-align: center;
    }

    .card-button-new a {
        font-weight: bold;
    }
</style>
