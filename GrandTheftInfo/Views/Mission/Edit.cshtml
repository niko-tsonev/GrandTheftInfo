@model MissionFormModel

@{
    ViewData["Title"] = "Edit Mission";
}

<div class="container">
    <h1 class="mt-4">Edit Mission</h1>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post" asp-controller="Mission" asp-action="Edit">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" value="@Model.Name" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" value="@Model.Description" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="PlaytroughUrl"></label>
            <input asp-for="PlaytroughUrl" value="@Model.PlaytroughUrl" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="GameId"></label>
            <select asp-for="GameId" class="form-control">
                @foreach (var game in Model.Games)
                {
                    <option value="@game.Id">@game.Name</option>
                }
            </select>
        </div>
        <input type="submit" value="Edit" class="btn btn-outline-success" style="min-width: 140px" />
    </form>
</div>