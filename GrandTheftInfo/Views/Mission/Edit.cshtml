@model MissionFormModel

@{
    ViewData["Title"] = "Edit Mission";
}

<div class="container">
    <h1 class="mt-4">Edit Mission</h1>

    <form method="post" asp-controller="Mission" asp-action="Edit">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" value="@Model.Name" type="text" class="form-control" placeholder="Cleaning the Hood">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" value="@Model.Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PlaytroughUrl"></label>
            <input asp-for="PlaytroughUrl" value="@Model.PlaytroughUrl" type="text" class="form-control">
            <span asp-validation-for="PlaytroughUrl" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GameId"></label>
            <select asp-for="GameId" class="form-control">
                @foreach (var game in Model.Games)
                {
                    <option value="@game.Id">@game.Name</option>
                }
            </select>
        </div>
        <div class="form-buttons mt-3">
            <input type="submit" value="Edit" class="btn btn-outline-success" />
            <a asp-controller="Mission" asp-action="Index" class="btn btn-outline-danger">Back</a>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
