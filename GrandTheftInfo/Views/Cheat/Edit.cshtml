@model CheatFormModel

@{
    ViewData["Title"] = "Edit Cheat";
}

<div class="container">
    <h1 class="mt-4">Edit Cheat</h1>

    <form method="post" asp-controller="Cheat" asp-action="Edit">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" value="@Model.Name" type="text" class="form-control" placeholder="Money, Power, Respect" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CheatCode"></label>
                    <input asp-for="CheatCode" value="@Model.CheatCode" type="text" class="form-control" />
                    <span asp-validation-for="CheatCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Platform"></label>
                    <input asp-for="Platform" value="@Model.Platform" type="text" class="form-control" />
                    <span asp-validation-for="Platform" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GameId"></label>
                    <select asp-for="GameId" class="form-control">
                        @foreach (var game in Model.Games)
                        {
                            <option value="@game.Id">@game.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="form-buttons mt-3">
            <input type="submit" value="Edit" class="btn btn-outline-success" />
            <a asp-controller="Cheat" asp-action="Index" class="btn btn-outline-danger">Back</a>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
