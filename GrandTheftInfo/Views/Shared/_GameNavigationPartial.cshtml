@model IEnumerable<IGrouping<int, IGameServiceModel>>
@using GrandTheftInfo.Core.Contracts.ServiceModels

<div class="game-nav-container">
    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
        @foreach (var group in Model)
        {
            var firstItem = group.First();
            <input type="radio" class="btn-check" name="btnradio" id="btnradio-@group.Key" data-game-id="@group.Key" autocomplete="off" @if (group.Key == Model.First().Key)
            {
                <text>checked</text>
            }/>
            <label class="btn btn-outline-primary" for="btnradio-@group.Key">@firstItem.GameName</label>
        }
    </div>
</div>
